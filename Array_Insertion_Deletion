</body><script>
let brake1 = document.createElement('br')

s1.append(brake1)

let txt = document.createElement('input')

txt.placeholder = "Enter Array Size"

s1.appendChild(txt)

let txt2 = document.createElement('input')

txt2.placeholder = "Array Elements(Separate Array Elements By Space) "

s1.appendChild(txt2)

let txt3 = document.createElement('input')

txt3.placeholder = "Index To Add "

s1.appendChild(txt3)

let txt4 = document.createElement('input')

txt4.placeholder = "Element to add "

s1.appendChild(txt4);

let result = document.createElement('input')

result.placeholder = "After Insertion "

var guiArr;

var insertMe = () => {

  let v1 = parseInt(txt.value)

  let v2 = txt2.value;

  let v3 = parseInt(txt3.value)

  let v4 = parseInt(txt4.value)

  guiArr = v2.split(' ');

  let gui = txt3.value

  result.value = gui

  for (var j = v1; j > v3 + 1; j--) {

    guiArr[j + 1] = guiArr[j];

  }

  guiArr[v3 - 1] = v4;

  v1++;

  result.value = guiArr

}

var removeMe = () => {

  let v1 = parseInt(txt.value)

  let v2 = txt2.value;

  let v3 = parseInt(txt3.value)

  let v4 = parseInt(txt4.value)

  // var guiArr = new Array(v1);

  var guiArr = v2.split(' ');

  let gui = txt3.value

  result.value = gui

  for (var j = v3; j < v1; j++) {

    guiArr[j] = guiArr[j + 1];

  }

  v1--;

  result.value = guiArr

}

let insert = document.createElement('button')

insert.innerText = "Insert"

insert.addEventListener('click', insertMe)

s1.appendChild(insert)

let remove = document.createElement('button')

remove.innerText = "Remove"

remove.addEventListener('click', removeMe)

s1.appendChild(remove)

s1.appendChild(result) 

let me = document.createElement('label')

remove.innerText = "- By Aditya Kurapati (IF5I)"

s1.appendChild(me)

</script>

